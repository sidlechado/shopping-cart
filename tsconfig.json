{
	"compilerOptions": {
		"baseUrl": ".",
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"paths": {
			"*": [
				"node_modules",
				"src/types/*"
			],
			"@entity": ["src/entity/"],
			"@entity/": ["src/entity/"],
		}
	},
	"include": [
		"src/*/"
	]
}
